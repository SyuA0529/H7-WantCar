<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="hyndaiTextFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/hyndaisans_text</item>
    </style>

    <style name="hyndaiButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/hyndaisans_text</item>
    </style>

    <style name="hyndaiEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/hyndaisans_text</item>
    </style>

    <style name="hyndaiCompoundButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/hyndaisans_text</item>
    </style>

    <style name="hyndaiCheckBoxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/hyndaisans_text</item>
    </style>

    <style name="TabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hyndaisans_head_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabItemStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hyndaisans_head_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/active_blue2</item>
    </style>

    <style name="HmgDataTag">
        <item name="fontFamily">@font/hyndaisans_head_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">HMG Data</item>
        <item name="android:background">@color/active_blue2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="HmgDataButton">
        <item name="fontFamily">@font/hyndaisans_head_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">HMG Data</item>
        <item name="android:background">@color/active_blue2</item>
        <item name="android:textColor">@color/white</item>
      
    <style name="DetailViewTag">
        <item name="fontFamily">@font/hyndaisans_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text"> 상세보기</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FragmentHeader" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/hyndaisans_head_bold</item>
    </style>

</resources>