<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background" android:height="6dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color_800"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress" android:height="6dp" android:gravity="center">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
                <corners android:radius="4dp"/>
            </shape>
        </clip>
    </item>

</layer-list>